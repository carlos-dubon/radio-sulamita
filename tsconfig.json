{
  "compilerOptions": {
    "types": ["node"],
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@lib/atoms": ["./src/components/atoms"],
      "@lib/molecules": ["./src/components/molecules"],
      "@lib/organisms": ["./src/components/organisms"],
      "@lib/templates": ["./src/components/templates"],
      "@lib/helpers": ["./src/helpers"],
      "@state/store": ["./src/state"],
      "@app/hooks": ["./src/hooks"],
      "@app/firebase": ["./src/firebase"],
      "@app/analytics": ["./src/analytics/analyticsConfig.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
